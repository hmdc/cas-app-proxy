#!/usr/bin/env node

var fs = require('fs');
var app = require('../app');
var https = require('https');
var http = require('http');

HTTP_PORT = 8080

if (app.locals.ENV == 'development') {
    // This is useful for CAS testing.
    var credentials = {
        key: fs.readFileSync('./ssl/self-signed-development.key', 'utf-8'),
        cert: fs.readFileSync('./ssl/self-signed-development.crt', 'utf-8')
    };

    var secureServer = https.createServer(credentials, app).listen(443, function() {
        console.log("Listening on 443");
    });
}

var insecureServer = http.createServer(app).listen(HTTP_PORT, function() {
    console.log('Insecure Server listening on port ' + HTTP_PORT);
});